worker_processes 1;
error_log stderr;
pid nginx.pid;
daemon off;

events {
  worker_connections 768;
}

http {
  client_body_timeout 5;
  types_hash_max_size 2048;
  include mime.types;
  charset UTF-8;

  server {
    listen {{ $.PORT }};
    server_name _;
    client_max_body_size 1M;
    root /app/www/out;
    index index.html;
    port_in_redirect off;

    location / {
      try_files $uri $uri/ $uri.html /index.html;
    }
  }
}
